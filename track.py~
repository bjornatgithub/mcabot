import RPi.GPIO as GPIO

IO_LEFT_SENSOR  = 25
IO_CENT_SENSOR  = 24
IO_RIGHT_SENSOR = 23

ON_TRACK  = 0
OFF_TRACH = 1

class Track(object):

    def __init__(self):
        GPIO.setup(IO_LEFT_SENSOR, GPIO.IN)
        GPIO.setup(IO_CENT_SENSOR, GPIO.IN)
        GPIO.setup(IO_RIGHT_SENSOR, GPIO.IN)

    def update(self):

        if (ON_TRACK == GPIO.input(IO_CENT_SENSOR)):
            return "CENTER"

        if (ON_TRACK == GPIO.input(IO_LEFT_SENSOR)):
            return "LEFT"

        if (ON_TRACK == GPIO.input(IO_RIGHT_SENSOR)):
            return "RIGHT"
